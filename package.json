{
  "name": "my-hugo-site",
  "private": true,
  "scripts": {
    "build": "hugo --minify --gc",
    "css:build": "postcss assets/css/main.css -o assets/css/compiled.css --env production",
    "css:watch": "postcss assets/css/main.css -o assets/css/compiled.css --watch"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "tailwindcss": "^3.3.5",
    "@tailwindcss/typography": "^0.5.10"
  }
}